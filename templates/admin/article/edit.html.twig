{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_article_edit' %}

{% block main %}
    <h1>{{ 'title.edit_post'|trans({id: article.id}) }}</h1>

    {{ include('admin/article/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context: false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_article_show', {id: article.id}) }}" class="btn btn-lg btn-block btn-success">
            <twig:ux:icon name="tabler:eye"/> {{ 'action.show_post'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('admin/article/_delete_form.html.twig', {article: article}, with_context: false) }}
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
